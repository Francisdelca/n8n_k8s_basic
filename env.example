# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN PARA n8n
# ========================================
# 
# INSTRUCCIONES:
# 1. Copia este archivo: cp env.example .env
# 2. Edita .env con tus valores reales
# 3. Ejecuta: source .env && helm install n8n-prod . -f values-prod.yaml
# 
# ⚠️  NUNCA comitees el archivo .env (está en .gitignore)

# ========================================
# DOMINIO Y SSL
# ========================================
N8N_DOMAIN=n8n.tudominio.com
N8N_EMAIL=tu-email@tudominio.com

# ========================================
# BASE DE DATOS
# ========================================
DB_HOST=postgresql-service
DB_PORT=5432
DB_NAME=n8n
DB_USER=n8n
DB_PASSWORD=tu-password-postgres-seguro
DB_SCHEMA=public

# ========================================
# REDIS
# ========================================
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=tu-password-redis-seguro

# ========================================
# SEGURIDAD
# ========================================
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here
N8N_ADMIN_USER=admin
N8N_ADMIN_PASSWORD=tu-password-admin-seguro

# ========================================
# STORAGE
# ========================================
STORAGE_CLASS=fast-ssd
STORAGE_SIZE=50Gi
REDIS_STORAGE_SIZE=10Gi

# ========================================
# RECURSOS
# ========================================
CPU_REQUEST=500m
MEMORY_REQUEST=1Gi
CPU_LIMIT=2
MEMORY_LIMIT=4Gi

# ========================================
# ESCALABILIDAD
# ========================================
MIN_REPLICAS=2
MAX_REPLICAS=5
TARGET_CPU=70
TARGET_MEMORY=80

# ========================================
# LETSENCRYPT
# ========================================
CERT_MANAGER_ISSUER=letsencrypt-prod
INGRESS_CLASS=nginx

# ========================================
# LOGS Y MONITOREO
# ========================================
LOG_LEVEL=info
LOG_OUTPUT=console
EXECUTION_TIMEOUT=3600
EXECUTION_TIMEOUT_MAX=7200
